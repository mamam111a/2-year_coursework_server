{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Build server",
            "type": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/server",           // путь к хедерам
                "${workspaceFolder}/server/server.cpp",
                "${workspaceFolder}/server/authorization.cpp",
                "${workspaceFolder}/server/condition.cpp",
                "${workspaceFolder}/server/condition_additional.cpp",
                "${workspaceFolder}/server/crud.cpp",
                "${workspaceFolder}/server/workingCSV.cpp",
                "${workspaceFolder}/server/DBMSbody.cpp",
                "${workspaceFolder}/server/server_additional.cpp",
                "${workspaceFolder}/server/filelocks.cpp",
                "-o",
                "${workspaceFolder}/server/server",
                "-lssl",
                "-lcrypto"
            ],
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build all server source files"
        }
    ]
}