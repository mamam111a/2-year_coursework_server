{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Запуск проекта",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/server",  // Путь к исполняемому файлу
            "args": [],  // Можешь передать аргументы командной строки, если нужно
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,  // Открывать ли внешнюю консоль
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "C++: сборка проекта",  // Задача для компиляции
            "logging": {
                "engineLogging": true
            }
        }
    ]
}
